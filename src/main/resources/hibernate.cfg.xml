<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL92Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">swingbyyesmine</property>
        <property name="hibernate.connection.password">mypass</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/swingydb</property>
        <property name="connection_pool_size">1</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="show_sql">false</property>
        <mapping class="org.yesmine.dao.entities.HeroEntity"/>
    </session-factory>
</hibernate-configuration>